{
  "name": "@willsoto/casbin-objection-adapter",
  "version": "0.2.2",
  "description": "",
  "keywords": [
    "casbin",
    "objection",
    "knex",
    "casbin-database",
    "casbin-adapter"
  ],
  "repository": {
    "type": "git",
    "url": "github:willsoto/casbin-objection-adapter"
  },
  "license": "Apache-2.0",
  "author": "Will Soto <willsoto@users.noreply.github.com> (https://github.com/willsoto)",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "typings"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "eslint . --ext ts,js --fix",
    "prerelease": "npm run build",
    "release": "standard-version --sign",
    "test": "mocha",
    "pretest:cov": "rimraf coverage .nyc_output",
    "test:cov": "nyc mocha",
    "test:watch": "mocha --watch",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "prettier --write"
    ],
    "*.{md,yaml,yml}": [
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "file": "./ad-hocs/mocha/plugins.ts",
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "./ad-hocs/mocha/hooks.ts"
    ],
    "sort": true,
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "nyc": {
    "all": true,
    "branches": 70,
    "check-coverage": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "functions": 90,
    "include": [
      "src/**/*.ts"
    ],
    "lines": 85,
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 85
  },
  "devDependencies": {
    "@commitlint/cli": "~12.1.1",
    "@commitlint/config-conventional": "~12.1.1",
    "@istanbuljs/nyc-config-typescript": "~1.0.1",
    "@types/chai": "~4.2.17",
    "@types/chai-as-promised": "~7.1.3",
    "@types/mocha": "~8.2.2",
    "@types/node": "~15.6.0",
    "@types/sinon": "~10.0.0",
    "@types/sinon-chai": "~3.2.5",
    "@typescript-eslint/eslint-plugin": "~4.24.0",
    "@typescript-eslint/parser": "~4.24.0",
    "casbin": "~5.7.0",
    "chai": "~4.3.4",
    "chai-as-promised": "~7.1.1",
    "eslint": "~7.26.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-mocha": "~8.1.0",
    "husky": "~6.0.0",
    "knex": "~0.21.5",
    "lint-staged": "~11.0.0",
    "markdown-toc": "~1.2.0",
    "mocha": "~8.4.0",
    "nyc": "~15.1.0",
    "objection": "~2.2.3",
    "prettier": "~2.3.0",
    "prettier-plugin-organize-imports": "~2.1.0",
    "prettier-plugin-packagejson": "~2.2.11",
    "reflect-metadata": "~0.1.13",
    "rimraf": "~3.0.2",
    "rxjs": "~7.0.0",
    "sinon": "~10.0.1",
    "sinon-chai": "~3.6.0",
    "source-map-support": "~0.5.19",
    "sqlite3": "~5.0.2",
    "standard-version": "~9.3.0",
    "ts-node": "~10.0.0",
    "typescript": "~4.2.4"
  },
  "peerDependencies": {
    "casbin": "^5.4.2",
    "knex": "^0.95.2",
    "objection": "^2.2.14"
  },
  "volta": {
    "node": "14.16.0",
    "npm": "7.6.0"
  }
}
